<section class="all-users">
  <div class="post_sp">
    <div class="post_">
      <h2><%= @post.title %> by <%= @post.author.name%></h2>
      <p>Comments:<%= @post.comments_counter%>,  Likes:<%= @post.likes_counter%></p>
    </div>
    <p class="P_text"><%= @post.text%></p>
  </div>

  <div class="post_sp_comment">
    <div class="add_post">
      <h3>comments:</h3>
      <button class="add_post_button">
        <%= link_to "Add new comment", new_post_comment_path(@post) %>
      </button>
    </div>
    <ul>
      <% @post_comments.includes(:author).each do |comment| %>
        <li><%= comment.author.name %>: <%= comment.text %></li>
      <% end %>
    </ul>
  </div>
</section>